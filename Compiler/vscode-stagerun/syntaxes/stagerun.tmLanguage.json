{
  "scopeName": "source.stagerun",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#instructions" },
    { "include": "#numbers" },
    { "include": "#strings" },
    { "include": "#comments" },
    { "include": "#sections" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "entity.name.type.stagerun", 
          "match": "\\b(handler)\\b"
        },
        {
          "name": "entity.name.function.stagerun", 
          "match": "\\b(key|default|end|poskey|posdefault)\\b"
        },
        {
          "name": "keyword.control.stagerun",
          "match": "(?<!\\.)\\b(MAIN|BODY)\\b|(?<!\\.)\\b(port|pin|pout|hash|reg|var|queue|setup)\\b" 
        }
      ]
    },
    "instructions": {
      "patterns": [
        {
          "match": "(^|\\s)(\\.(?:rand|mget))\\b",
          "captures": {
            "2": { "name": "keyword.operator.stagerun" }
          }
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.stagerun",
          "match": "\\b[-+]?[0-9]+\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.stagerun",
          "match": "\".*?\""
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.stagerun",
          "match": "#.*$"
        }
      ]
    },
    "sections": {
      "patterns": [
        {
          "name": "entity.name.section.stagerun",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b(?=\\s*:)"
        }
      ]
    }
  }
}